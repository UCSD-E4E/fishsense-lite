    "version": "0.2.0",
    "configurations": [
        {
            "name": "Calibrate Lens",
            "type": "debugpy",
            "request": "launch",
            "module": "fishsense_lite",
            "justMyCode": false,
            "args": [
                "calibrate-lens",
                "/mnt/c/Users/chris/Data/fsl-08d/lens/*.ORF",
                "--rows",
                "17",
                "--columns",
                "24",
                "--square-size",
                "30",
                "--output",
                "fsl-08d-lens-raw.pkg",
                "--overwrite"
            ]
        },
        {
            "name": "Calibrate Laser",
            "type": "debugpy",
            "request": "launch",
            "module": "fishsense_lite",
            "justMyCode": false,
            "args": [
                "calibrate-laser",
                "/mnt/c/Users/chris/Data/fsl-02d/laser/*.ORF",
                "--lens-calibration",
                "/mnt/c/Users/chris/Data/fsl-02d/fsl-02d-lens-raw.pkg",
                "--laser-position",
                "-3", "-10", "0",
                "--laser-axis",
                "0", "0", "1"
            ]
        }
    ]
}