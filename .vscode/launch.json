{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Calibrate Lens",
            "type": "debugpy",
            "request": "launch",
            "module": "fishsense_lite",
            "justMyCode": false,
            "args": [
                "calibrate-lens",
                "~/Data/fsl-02d/lens/*.ORF",
                "--rows",
                "14",
                "--columns",
                "10",
                "--square-size",
                "41.3",
                "--output",
                "fsl-02d-lens-raw.pkg",
                "--overwrite"
            ]
        },
        {
            "name": "Calibrate Laser",
            "type": "debugpy",
            "request": "launch",
            "module": "fishsense_lite",
            "justMyCode": false,
            "args": [
                "calibrate-laser",
                "~/Data/fsl-02d/laser/*.ORF",
                "--lens-calibration",
                "fsl-02d-lens-raw.pkg",
                "--laser-position",
                "-4", "-11", "0",
                "--laser-axis",
                "0", "0", "1",
                "--rows",
                "14",
                "--columns",
                "10",
                "--square-size",
                "41.3",
                "--output",
                "fsl-02d-laser.pkg",
                "--overwrite"
            ]
        },
        {
            "name": "Field Calibrate Laser",
            "type": "debugpy",
            "request": "launch",
            "module": "fishsense_lite",
            "justMyCode": false,
            "args": [
                "field-calibrate-laser",
                "~/Data/082923_Pool Calibration/082929_Slate_FSL01/*.ORF",
                "--lens-calibration",
                "~/Data/calibration-parameters/FSL-01D/fsl-01d-lens-raw.pkg",
                "--laser-position",
                "-4", "-11", "0",
                "--laser-axis",
                "0", "0", "1",
                "--pdf",
                "~/Data/calibration-parameters/Dive Slate#1.pdf"
            ]
        },
        {
            "name": "Preprocess",
            "type": "debugpy",
            "request": "launch",
            "module": "fishsense_lite",
            "justMyCode": false,
            "args": [
                "preprocess",
                "~/Data/082923_Pool Calibration/082929_Slate_FSL01/*.ORF",
                "--lens-calibration",
                "~/Data/calibration-parameters/FSL-01D/fsl-01d-lens-raw.pkg",
                "--disable-histogram-equalization",
                "--overwrite"
            ]
        },
        {
            "name": "Process",
            "type": "debugpy",
            "request": "launch",
            "module": "fishsense_lite",
            "justMyCode": false,
            "args": [
                "process",
                "~/Data/fsl-02d/george/*.ORF",
                "--lens-calibration",
                "fsl-02d-lens-raw.pkg",
                "--laser-calibration",
                "fsl-02d-laser.pkg",
                "--output",
                "./output/output.db",
                "--overwrite"
            ]
        },
    ]
}