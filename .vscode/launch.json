{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Calibrate Lens",
            "type": "debugpy",
            "request": "launch",
            "module": "fishsense_lite",
            "justMyCode": false,
            "args": [
                "calibrate-lens",
                "~/Data/fsl-02d/lens/*.ORF",
                "--rows",
                "14",
                "--columns",
                "10",
                "--square-size",
                "41.3",
                "--output",
                "fsl-02d-lens-raw.pkg",
                "--overwrite"
            ]
        },
        {
            "name": "Calibrate Laser",
            "type": "debugpy",
            "request": "launch",
            "module": "fishsense_lite",
            "justMyCode": false,
            "args": [
                "calibrate-laser",
                "~/Data/fsl-02d/laser/*.ORF",
                "--lens-calibration",
                "fsl-02d-lens-raw.pkg",
                "--laser-position",
                "-4", "-11", "0",
                "--laser-axis",
                "0", "0", "1",
                "--rows",
                "14",
                "--columns",
                "10",
                "--square-size",
                "41.3",
                "--output",
                "fsl-02d-laser.pkg",
                "--overwrite"
            ]
        },
        {
            "name": "Preprocess",
            "type": "debugpy",
            "request": "launch",
            "module": "fishsense_lite",
            "justMyCode": false,
            "args": [
                "preprocess",
                "~/Data/fsl-02d/laser/*.ORF",
                "--lens-calibration",
                "fsl-02d-lens-raw.pkg",
                "--disable-histogram-equalization",
                "--overwrite"
            ]
        }
    ]
}